<h1>Edit posts</h1>
<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label><br>
        <input name="title" type="text" class="front-control" id="title" value="{{post.title}}" size="185">     

    </div>

    <div class="form-group">
       <label for="file">File</label>
       <input type="file" name="file" class="form-control">
   </div>

    <div class="form-group">
        <label form="category">Category</label><br>
        <select name="category" id="category" class="front-control">
            
            {{#select post.category}}
                {{#each categories}}

                    <option value="{{slug}}">{{name}}</option>
                {{/each}}
            {{/select}}
            
        </select>
    </div>





    <div class="form-group">
        <label form="status">Status</label><br>
        <select name="status" id="status" class="front-control">
            {{#select post.status}}
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
            {{/select}}
        </select>
    </div>

    

    <div class="form-check">
        <label for="allowComments">
        <input name="allowComments" type="checkbox" {{#if post.allowComments}} checked="checked" {{/if}} class="front-check-input" id="allowComments"> 
        Allow Comments    
        </label>
    </div>
    <div class="form-group">
        <label for="body">Body</label><br>
        <textarea name="body" cols="185" rows="10" type="text" class="front-control" id="body">{{post.body}}</textarea>    

    </div>

    <button type="submit" class="btn btn-primary">Update Post

    </button>

</form>