<h1> All posts</h1>



<head>
<style>
table, td, th {
  border: 1px solid black;
}

table {
  border-collapse: collapse;
  width: 100%;
}

th {
  height: 70px;
  width: 250px
}
th {
  height: 70px;
  width: 250px
}


</style>
</head>

<table class="table table-bordered">
    <thead>

        <tr>
            <th>Id</th>
            <th>file</th>
            <th>Title</th>
            <th>Status</th>
            <th>Categories</th>
            <th>Allow Comments</th>
            <th>View Post</th>
            <th>Date</th>

        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td><img height="56" src="/uploads/{{file}}"</td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{category.name}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/post/{{slug}}">View</a></td>
            <td>{{GenerateTime date 'MMMM Do YYYY'}}</td>
            
